@model IEnumerable<OnlineBookStore.Models.Category>

<h2 class="mt-4 mb-3">Manage Categories</h2>

<a asp-action="Create" class="btn btn-success mb-3">Add Category</a>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th width="180"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<OnlineBookStore.Models.Book>

@{
    ViewData["Title"] = "Shop Books";
    var categories = ViewBag.Categories as List<OnlineBookStore.Models.Category>;
    int? selectedCategory = ViewBag.SelectedCategoryId;
    string search = ViewBag.Search;
    string sort = ViewBag.Sort;
}

<h2 class="mt-3 mb-4">Shop Books</h2>

<form method="get" class="row mb-4">
    <div class="col-md-4">
        <input type="text" name="search" value="@search" class="form-control" placeholder="Search by title or author" />
    </div>

    <div class="col-md-3">
        <select name="categoryId" class="form-select">
            <option value="">All Categories</option>
            @foreach (var c in categories)
            {
                <option value="@c.Id" @(selectedCategory == c.Id ? "selected" : "")>@c.Name</option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <select name="sort" class="form-select">
            <option value="">Sort by</option>
            <option value="price_asc" @(sort == "price_asc" ? "selected" : "")>Price: Low to High</option>
            <option value="price_desc" @(sort == "price_desc" ? "selected" : "")>Price: High to Low</option>
            <option value="popular" @(sort == "popular" ? "selected" : "")>Most Popular</option>
        </select>
    </div>

    <div class="col-md-2">
        <button class="btn btn-primary w-100">Filter</button>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info">No books found.</div>
}
else
{
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="@book.CoverImageUrl" class="card-img-top" style="height: 250px; object-fit: cover;" />

                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="text-muted">@book.Author</p>
                        <p><strong>@book.Price.ToString("C")</strong></p>

                        <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-primary w-100">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

